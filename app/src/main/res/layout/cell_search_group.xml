<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="@dimen/len_2"
	android:layout_marginBottom="@dimen/len_2"
	android:background="@color/white"
	android:foreground="@drawable/ic_touch_fg"
	android:paddingBottom="@dimen/len_12"
	android:paddingTop="@dimen/len_12"
	android:paddingStart="@dimen/len_16"
	android:paddingEnd="@dimen/len_16">

	<com.hyd.common.common.widget.PortraitView
		android:id="@+id/im_portrait"
		android:layout_gravity="start|center_vertical"
		android:layout_width="@dimen/portraitSize"
		android:layout_height="@dimen/portraitSize"
		android:src="@drawable/default_portrait"/>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:gravity="center_vertical"
		android:orientation="vertical"
		android:layout_marginStart="@dimen/len_12">

		<TextView
			android:id="@+id/txt_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:lines="1"
			android:textAppearance="@style/TextAppearance.AppCompat.Title"
			android:textColor="@color/textAccent"
			android:textSize="@dimen/fontNameSize"
			tools:text="@string/app_name"/>

		<TextView
			android:id="@+id/txt_desc"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			android:lines="1"
			android:textAppearance="@style/TextAppearance.AppCompat.Body1"
			android:textColor="@color/textPrimary"
			android:textSize="@dimen/font_12"
			tools:text="@string/app_name"/>

	</LinearLayout>

	<ImageView
		android:id="@+id/im_join"
		android:layout_width="@dimen/len_52"
		android:layout_height="@dimen/len_28"
		android:contentDescription="@string/app_name"
		android:layout_gravity="end|center_vertical"
		android:padding="@dimen/len_2"
		android:background="@drawable/sel_btn_bg_accent_4"
		android:src="@drawable/sel_opt_done_add"
		android:tint="@color/white_alpha_208"/>

</LinearLayout>