<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/grey_200"
	android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:orientation="horizontal"
		android:padding="@dimen/len_16">

		<LinearLayout
			android:id="@+id/layout_dynamic"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:gravity="center"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/dynamic"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:padding="@dimen/len_4"
				android:src="@drawable/ic_friend_dynamic"
				android:tint="#f4ea2a" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/len_6"
				android:text="好友动态"
				android:textColor="@color/black_alpha_144"
				android:textSize="@dimen/font_12" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="@dimen/len_6"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="gone">

			<ImageView
				android:id="@+id/interest_tribe"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/ic_interest_tribe" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/interest_tribe"
				android:drawablePadding="@dimen/len_10"
				android:text="兴趣"
				android:textColor="@color/black_alpha_144"
				android:textSize="@dimen/font_12" />
		</LinearLayout>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_marginTop="@dimen/len_6"
			android:gravity="center"
			android:orientation="vertical"
			android:visibility="gone">

			<ImageView
				android:id="@+id/nearby"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/ic_nearby" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawablePadding="@dimen/len_10"
				android:text="附近"
				android:textColor="@color/black_alpha_144"
				android:textSize="@dimen/font_12" />
		</LinearLayout>
	</RelativeLayout>

</LinearLayout>